/* pages/destop/destop.wxss */

.main {
  width: 100%;
}

.title {
  text-align: center;
  font-weight: bold;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  flex-direction: column;
  margin-top: 20px;
}

.subLable{
  font-weight: bold
}

.item-wrapper {
  display: flex;
  flex-direction: row;
  height: 80rpx;
  background: #fff;
  margin-top: 20rpx;
  padding-left: 20rpx;
  padding-top: 20rpx;
  padding-bottom: 20rpx;
  justify-content: space-between;
  align-items: center;
}

.subtip{
  display: flex;
  flex-direction: row;
  height: 100%;
  justify-content: center;
  align-items: center;
}

.tip {
  justify-content: center;
  text-justify: inter-cluster;
  background: darkblue;
}

.subtitle {
  display: flex;
  flex-direction: row;
}

.name {
  margin-left: 8px;
}

.phone {
  margin-left: 8px;
}

.address {
  margin-left: 8px;
}

.arrow-icon{
  display: flex;
  width: 40rpx;
  height: 40rpx;
  right: 10px;
  margin-right: 20rpx;
  align-content: center;
  align-items: center;
  justify-content: center;
}

.goods-item-wrapper{
  display: flex;
  flex-direction: column;
}

.goods-info{
  width: 100%;
  background: #ffffff;
  padding: 8px;
  margin-top: 8px;
  display: flex;
  flex-direction: row;
  justify-content: space-between
}

.goods-item{
  margin-left: 8px;
  display: flex;
  flex-direction: row;
}

.flow_bottom{
  position: fixed;
  bottom: 0;
  width: 100%;
  height: 86rpx;
  background: greenyellow;
  display: flex;
  justify-content: center;
  /* text-align: center; */
  align-items: center;
  /* flex-wrap: wrap */
}

.flow_bottom_text{
  text-align: center;
  font-size: 32rpx;
  align-items: center;
  justify-content: center;
  flex-wrap: wrap
}

.time-wrap{
  display: flex;
  justify-content: space-between;
  background: white;
  margin-top: 20rpx;
  align-items: center;
  padding-left: 20rpx;
  min-height: 100rpx;
}

.time-items{
  display: flex;
  flex-direction: row;
  align-items: center
}

.submit{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 80rpx;
  background: red;
  color: white;
  justify-content: center
}