/* pages/custom_info/custom_info.wxss */

.global-title {
  padding: 20rpx;
  color: #333;
}

.global-divider {
  width: 100%;
  height: 1px;
  margin-left: 20rpx;
  background: lightgray;
}

.global-content{
  background: white; 
}

.contact-wrapper {
  background: white;
  font-size: 23rpx;
  padding-left: 20rpx;
  padding-right: 20rpx;
  color: #888;
}

.contact-item {
  display: flex;
  flex-direction: row;
}

.contact-item-label {
  display: flex;
  /* background: blue; */
  justify-content: center;
  align-items: center;
  text-align: center;
  white-space: nowrap;
}

.contact-item-input {
  width: 100%;
  display: flex;
  /* background: red; */
  justify-content: center;
  margin-left: 10rpx;
  align-items: center;
}

.global-picker-wrapper {
  height: 40rpx;
  border: 1rpx;
  border-style: solid;
  padding-left: 6rpx; 
  margin-left: 10rpx;
  margin-right: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}

.global-picker-arrow {
  width: 20rpx;
  height: 12rpx;
  margin-left: 6rpx;
}

.customer-address-wrapper {
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  background: white;
  font-size: 23rpx;
  color: #888;
}

.checkout-cancel-wrapper {
  background: white;
  font-size: 23rpx;
  display: flex;
  flex-direction: row;
  padding: 20rpx;
  color: #888;
}

.checkout-cancel-switch {
  width: 20rpx;
  height: 20rpx;
  zoom: 60%;
  align-items: center;
  align-content: center;
  margin-left: 20rpx;
}

.checkout-ordersn-wrapper {
  background: white;
  font-size: 23rpx;
  display: flex;
  flex-direction: row;
  padding-left: 20rpx;
  color: #888;
  align-items: center;
}

.express-wrapper {
  background: white;
  font-size: 24rpx;
  color: #888;
  padding: 20rpx;
}

.express-pick-address {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
}

.third-express-wrapper{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
}

.third-express-info{
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  align-items: center;
  align-content: center;
}

.submit{
  display: flex;
  align-items: center;
  margin-top: 40rpx;
  margin-left: 60rpx;
  margin-right: 60rpx;
  height: 80rpx;
  background: red;
  color: white;
  justify-content: center
}